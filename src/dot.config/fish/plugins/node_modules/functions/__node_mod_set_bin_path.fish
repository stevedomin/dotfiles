function __node_mod_set_bin_path --description 'Add bin to path'

  if set -qg NODE_MODULES_BIN_PATH
    return 1
  end

  set -l node_modules_path $argv[1]

  set -xg NODE_MODULES_BIN_PATH (dirname $node_modules_path)/node_modules/.bin
  
  if test -d $NODE_MODULES_BIN_PATH
    set PATH $NODE_MODULES_BIN_PATH $PATH
  end
end
