function __node_modules_reset_bin_path --description 'Remove bin from path'
  set -qg NODE_MODULES_BIN_PATH; or return
  set -l new_path

  for i in $PATH
    if test $i != $NODE_MODULES_BIN_PATH
      set new_path $new_path $i
    end
  end

  set PATH $new_path
  set -eg NODE_MODULES_BIN_PATH
end

